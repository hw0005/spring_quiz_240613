<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.booking.mapper.BookingMapper">
 	<select id="selectBookingList" resultType="com.quiz.booking.domain.Booking">
 		SELECT
 			`id`	
			, `name`		
			, `headcount`		
			, `day`	
			, `date`		
			, `phoneNumber`		
			, `state`		
			, `createdAt`
			, `updatedAt`		
 		FROM
 			`booking`		
 	</select>
 	
 	<delete id="deleteBookingById" parameterType="string">
 		DELETE FROM
 			`booking`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
	<insert id="insertBooking" parameterType="map">
		INSERT INTO
			`booking`
		(
			`name`		
			, `day`	
			, `date`		
			, `headcount`		
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`	
		)
		VALUES
		(
			#{name}
			, #{day}
			, #{date}
			, #{headcount}
			, #{phoneNumber}
			, '대기중'
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectBookingList" parameterType="map" resultType="com.quiz.booking.domain.Booking">
		SELECT
 			`id`	
			, `name`		
			, `headcount`		
			, `day`	
			, `date`		
			, `phoneNumber`		
			, `state`		
			, `createdAt`
			, `updatedAt`		
 		FROM
 			`booking`
 		WHERE
 			`name` = #{name}
 			, `phoneNumber = #{phoneNumber}
	</select>
 
 </mapper>